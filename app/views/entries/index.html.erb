<% content_for :title do %>
  Nutrition Logger &ndash; <%= DateTime.now.to_fs(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
  <% @entries.each do |entry| %>
    <div class="column is-one-quarter">
      <div class="card">
        <div class="card-header">
          <p class="card-header-title"><%= entry.meal_type %></p>
        </div>
        <div class="card-content">
          <div class="content">
            <p><span class="has-text-weight-bold"><%= entry.calories %></span> calories </p>
            <p><span class="has-text-weight-bold"><%= entry.proteins %></span>g protein </p>
            <p><span class="has-text-weight-bold"><%= entry.carbohydrates %></span>g carbohydates </p>
            <p><span class="has-text-weight-bold"><%= entry.fats %></span>g fat</p>
            <p class="italic">Logged <%= time_ago_in_words(entry.created_at) %> ago</p>
          </div>
        </div>
        <div class="card-footer">
          <%= link_to "Show", entry, class: "card-footer-item" %>
          <%= link_to "Edit", edit_entry_path(entry), class: "card-footer-item" %>
          <%= link_to "Delete", entry, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "card-footer-item" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


<div class="columns is-centered mt-6">
  <%= link_to "View all entries", archives_index_path, class: "button is-link is-centered is-outlined" %>
</div>